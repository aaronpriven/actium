-l=80   # Max line width is 80 cols
-i=4    # Indent level is 4 cols
-ci=2   # Continuation indent is 2 cols
-vt=2   # Maximal vertical tightness
-cti=0  # No extra indentation for closing brackets
-pt=1   # Medium parenthesis tightness
-bt=1   # Medium brace tightness
-sbt=1  # Medium square bracket tightness
-bbt=1  # Medium block brace tightness
-bbao   # Break before all operators
#-csc    # Add closing side comments
#-csci=20 # Closing side comments 20 lines or longer
#-cscp="## tidy end:"
-nbbc # don't introduce blanks before comments

#!/usr/bin/perl

@files = @ARGV;

use File::Basename;

foreach $file (@files) {


   $rawfile = basename($file);
   open OUT , ">/Users/Shared/actium/html/upcoming/$rawfile";

   print OUT <<"EOF";
<html>
<head>
<META HTTP-EQUIV="refresh" 
content="0;URL=http://www.actransit.org/riderinfo/schedules/$rawfile">
</head>
<body>
<p>See <a href="http://www.actransit.org/riderinfo/schedules/$rawfile">current
schedule.</a></p>
</body>
</html>
EOF

   close OUT;

}
